@media (prefers-color-scheme: dark) {
  a {
    color: #4385BE; }
  .intro {
    background-color: #1C1B1A; }
  .posts li a {
    color: #FFFCF0; }
    .posts li a span {
      background-color: #100F0F; }
    .posts li a .date {
      color: #575653; }
  main blockquote {
    border-left: 4px solid #575653;
    background-color: #1C1B1A; } }

footer {
  display: flex;
  margin: 3.6rem 0 0;
  align-items: center;
  justify-content: space-between;
  font-size: 0.75rem;
  color: #6F6E69; }
