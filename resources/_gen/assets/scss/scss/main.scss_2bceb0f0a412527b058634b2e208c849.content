    color: #FFFCF0; } }

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 2rem; }
  .header.inner {
    padding: 0 0 2.8rem; }
  .header a {
    text-decoration: none; }

.logo {
  color: inherit;
  font-size: 0; }
  .logo::before {
    content: 'üç∫';
    font-size: 1.2rem; }
  .logo:hover {
    text-decoration: none; }
  .logo:hover::before {
    content: 'üçª';
    font-size: 1.2rem; }

.intro {
  margin-bottom: 4rem;
  padding: 1.2rem 1.4rem;
  background-color: #F2F0E5;
  border-radius: 2rem; }
  .intro h2 {
    margin-top: 1rem; }
  .intro p {
    font-family: "Source Sans 3", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; }
  .intro a {
